@model MVCeTicaret.Models.Customer

@{
	ViewBag.Title = "UpdateProfile";
}

<h2>Profili Güncelle</h2>

<div class="container">
	<div class="row" style="margin-top:50px;">
		@using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
		{
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>İsim:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @required = "required" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Soyisim:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @required = "required" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Kullanıcı Adı:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @required = "required", @disabled = "disabled" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Şifre: </label>
					</div>
					<div class="col-md-10">
						@Html.PasswordFor(x => x.Password, new { @class = "form-control", @required = "required" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Erkek: </label>
					</div>
					<div class="col-md-10">
						@Html.CheckBoxFor(x => x.Gender)
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Doğum Tarihi </label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.BirthDate, "{0:dd.MM.yyyy}", new { @class = "form-control", @required = "required" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Adres:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Şehir:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.City, new { @class = "form-control" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-2">
						<label>Ülke:</label>
					</div>
					<div class="col-md-10">
						@Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-10 col-md-offset-2">
						<input type="submit" value="GÜNCELLE" name="girisyap" class="form-control btn btn-info" />
					</div>
				</div>
			</div>
		}
	</div>
</div>