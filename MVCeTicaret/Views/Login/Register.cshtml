
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row" style="margin-top:50px;">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>İsim:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="name" placeholder="Adı Giriniz.." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Soyisim:</label>
                    </div>

                    <div class="col-md-10">
                        <input type="text" required name="surname" placeholder="Soyismi Giriniz.." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="username" placeholder="Kullanıcı Adı Giriniz.." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" required name="password" placeholder="Şifre Giriniz.." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Erkek: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="checkbox" name="gender" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Doğum Tarihi </label>
                    </div>
                    <div class="col-md-10">
                        <input type="date" required name="birthdate" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="ÜYE OL" name="girisyap" class="form-control btn btn-info" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

